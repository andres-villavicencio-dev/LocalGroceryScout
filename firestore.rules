rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if subscription fields are being modified
    function isModifyingSubscriptionFields() {
      return request.resource.data.diff(resource.data).affectedKeys()
        .hasAny(['isPro', 'subscriptionId', 'stripeCustomerId',
                 'subscriptionStatus', 'subscriptionEndDate', 'lastVerified']);
    }

    // Users collection rules
    match /users/{userId} {
      // Allow users to read their own data
      allow read: if isOwner(userId);

      // Allow users to create their own document (on first login/signup)
      allow create: if isOwner(userId);

      // Allow users to update their profile, but NEVER subscription fields
      // This prevents client-side manipulation of isPro status
      allow update: if isOwner(userId) && !isModifyingSubscriptionFields();

      // Allow users to delete their own data (account deletion)
      allow delete: if isOwner(userId);

      // Subcollection for shopping lists
      match /data/shoppingLists {
        allow read, write: if isOwner(userId);
      }

      // Subcollection for price history
      match /data/priceHistory {
        allow read, write: if isOwner(userId);
      }
    }

    // Processed webhooks collection - no client access
    // Only Cloud Functions (with admin SDK) can write to this
    match /processedWebhooks/{eventId} {
      allow read, write: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
